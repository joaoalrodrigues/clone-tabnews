{
  "dependencies": {
    "async-retry": "^1.3.3",
    "bcryptjs": "3.0.2",
    "dotenv-expand": "^12.0.1",
    "next": "^15.1.6",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "^7.9.0",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swr": "2.3.0",
    "uuid": "11.1.0"
  },
  "name": "clone-tabnews",
  "description": "",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently --names next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": " node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@faker-js/faker": "9.7.0",
    "@secretlint/secretlint-rule-github": "9.0.0",
    "@secretlint/secretlint-rule-no-dotenv": "9.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "@secretlint/secretlint-rule-privatekey": "9.0.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.4.2",
    "prettier": "3.4.2",
    "secretlint": "9.0.0"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
